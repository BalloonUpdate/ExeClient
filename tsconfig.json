{
    "compilerOptions": {
      "module": "CommonJS",
      "noImplicitAny": true,
      "noImplicitThis": false,
      "alwaysStrict": true,
      "strictFunctionTypes": true,
      "strictNullChecks": true,
      "strictPropertyInitialization": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "outDir": "dist",
      "target": "ES6",
      "allowJs": true
    },
    "include": [
      "src/**/*.ts", 
      "src/**/*.js"
    ],
    "exclude": []
}